<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fpi="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobello.amtrust.com.activity.QuickScanActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/actionbar" />

    <View
        android:id="@+id/top_line"
        style="@style/add_device_line"
        android:layout_below="@+id/tool_bar"
        android:background="#2A5792" />

    <mobello.amtrust.com.widget.NonSwipableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:overScrollMode="never"
        android:layout_below="@id/top_line"/>

</RelativeLayout>
