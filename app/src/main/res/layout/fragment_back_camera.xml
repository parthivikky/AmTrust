<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context="mobello.amtrust.com.fragment.FrontCameraFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30dp"
            android:text="Press Take Picture to open your front camera. We'll take a picture in few seconds."
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:src="@drawable/back_camera_demo" />

        <com.andexert.library.RippleView
            android:id="@+id/login_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:rv_centered="true"
            app:rv_color="@color/login_green_ripple"
            app:rv_rippleDuration="500"
            app:rv_type="simpleRipple"
            app:rv_zoom="true"
            app:rv_zoomDuration="100"
            android:layout_margin="30dp">

            <TextView
                android:id="@+id/take_picture"
                android:layout_width="wrap_content"
                android:background="@drawable/login_bg"
                android:layout_height="wrap_content"
                android:text="@string/take_picture"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:padding="10dp"/>

        </com.andexert.library.RippleView>

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip Test"
            android:textColor="#555555"
            android:layout_margin="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"/>
    </RelativeLayout>

</ScrollView>
