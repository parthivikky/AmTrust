<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/actionbar" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/microphone_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="{fa-camera}"
        android:textColor="#E38837"
        android:textSize="200sp" />

    <TextView
        android:id="@+id/detect_microphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="Press the button to test the camera."
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <com.joanzapata.iconify.widget.IconButton
        android:id="@+id/camera_test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/curved_bg"
        android:text="{fa-camera}"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/image_taken"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

</LinearLayout>
